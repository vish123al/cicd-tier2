{
  "id": "/mysql",
  "cmd": null,
  "cpus": 1,
  "mem": 1024,
  "disk": 0,
  "instances": 1,
  "acceptedResourceRoles": [
    "*"
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "forcePullImage": false,
      "image": "mysql:5.7.12",
      "parameters": [],
      "privileged": false
    },
    "volumes": [
      {
        "containerPath": "mysqldata",
        "persistent": {
          "type": "root",
          "size": 1000,
          "constraints": []
        },
        "mode": "RW"
      }
    ],
    "portMappings": [
      {
        "containerPort": 3306,
        "hostPort": 0,
        "labels": {
          "VIP_0": "3.3.0.6:3306"
        },
        "protocol": "tcp",
        "servicePort": 10110
      }
    ]
  },
  "env": {
    "MYSQL_ROOT_PASSWORD": "root",
    "MYSQL_USER": "wordpress",
    "MYSQL_PASSWORD": "secret",
    "MYSQL_DATABASE": "myapp"
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "protocol": "TCP",
      "timeoutSeconds": 20,
      "delaySeconds": 15
    }
  ],
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "portDefinitions": [],
  "args": [
    "--datadir=/mnt/mesos/sandbox/mysqldata/"
  ],
  "upgradeStrategy": {
    "maximumOverCapacity": 0,
    "minimumHealthCapacity": 0
  }
}
